{
  "name": "chrondle",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.1.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "concurrently \"npx convex dev\" \"next dev --turbopack\"",
    "dev:next": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit --incremental",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:ci": "vitest run",
    "test:unit": "vitest run -c vitest.config.unit.ts",
    "test:unit:watch": "vitest -c vitest.config.unit.ts",
    "test:integration": "vitest run -c vitest.config.integration.ts",
    "test:integration:watch": "vitest -c vitest.config.integration.ts",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:paywall": "playwright test --project=paywall",
    "test:e2e:subscription": "playwright test --project=subscription",
    "test:e2e:all": "playwright test",
    "test-module-system": "node scripts/test-module-system.mjs",
    "bundle-analysis": "ANALYZE=true pnpm build",
    "size": "size-limit",
    "ts-prune": "ts-prune --ignore '(used in module)|_generated|config.ts|layout.tsx|page.tsx'",
    "unimported": "unimported",
    "prepare": "husky",
    "clean": "rm -rf .next node_modules/.cache tsconfig.tsbuildinfo",
    "clean:next": "rm -rf .next tsconfig.tsbuildinfo",
    "clean:dev": "pnpm clean:next && pnpm dev",
    "fresh": "pnpm clean && pnpm install && pnpm dev",
    "check-cache": "node scripts/check-cache-age.mjs",
    "predev": "node scripts/check-cache-age.mjs || true",
    "events": "tsx scripts/manage-events.ts",
    "events:audit": "tsx scripts/audit-events.ts",
    "deploy:verify": "node scripts/verify-deployment.mjs",
    "deploy": "convex deploy && pnpm deploy:verify",
    "validate-puzzles": "node scripts/check-convex-state.mjs",
    "verify:convex": "node scripts/verify-convex-files.mjs",
    "verify:auth": "node scripts/verify-auth-production.mjs",
    "verify:auth:prod": "node scripts/verify-auth-production.mjs --production",
    "deployment:check": "node scripts/check-deployment-ready.mjs",
    "pre-push": "pnpm type-check && pnpm verify:convex",
    "quality": "node scripts/quality-report.mjs",
    "verify:env": "node scripts/verify-env-config.mjs",
    "verify:env:prod": "node scripts/verify-env-config.mjs production",
    "verify:stripe": "node scripts/verify-stripe-config.mjs",
    "verify:stripe:live": "node scripts/verify-stripe-config.mjs --live",
    "verify:vercel": "node scripts/verify-vercel-env.mjs",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "evals": "tsx scripts/run-evals.ts",
    "evals:view": "promptfoo view",
    "langfuse:upload": "tsx scripts/upload-langfuse-prompts.ts"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.36.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^6.0.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@langfuse/client": "^4.4.10",
    "@langfuse/otel": "^4.4.10",
    "@langfuse/tracing": "^4.4.10",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-visually-hidden": "^1.2.4",
    "@sentry/nextjs": "^10.27.0",
    "@types/canvas-confetti": "^1.9.0",
    "canvas-confetti": "^1.9.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.25.2",
    "lucide-react": "^0.523.0",
    "motion": "^12.19.1",
    "next": "16.1.5",
    "posthog-js": "^1.335.3",
    "posthog-node": "^5.21.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "resend": "^6.5.2",
    "stripe": "^20.1.2",
    "svix": "^1.69.0",
    "tailwind-merge": "^3.3.1",
    "vaul": "^1.1.2",
    "zod": "^4.1.7"
  },
  "pnpm": {
    "overrides": {
      "hono": ">=4.11.4",
      "esbuild": "^0.25.0",
      "ws": "^8.17.1",
      "tar-fs": ">=3.1.1",
      "nanoid": "^5.0.9",
      "glob": "^11.1.0",
      "mdast-util-to-hast": ">=13.2.1",
      "qs": ">=6.14.1"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@edge-runtime/vm": "^5.0.0",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "15.5.3",
    "@playwright/test": "^1.57.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@size-limit/preset-app": "11.2.0",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "^24.5.2",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^3.2.4",
    "@welldone-software/why-did-you-render": "^10.0.1",
    "commander": "^14.0.0",
    "concurrently": "^9.2.0",
    "convex-test": "^0.0.41",
    "dotenv": "^17.2.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "husky": "9.1.7",
    "jsdom": "27.0.0",
    "lightningcss": "^1.30.1",
    "lint-staged": "16.1.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "promptfoo": "^0.120.20",
    "semantic-release": "^25.0.2",
    "size-limit": "11.2.0",
    "tailwindcss": "^4",
    "ts-prune": "0.10.3",
    "tsx": "^4.20.3",
    "tw-animate-css": "1.3.4",
    "typescript": "^5",
    "unimported": "1.31.1",
    "vitest": "^3.2.4"
  }
}
